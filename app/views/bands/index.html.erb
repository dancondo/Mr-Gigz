<div class = "container" >

  <br>

  <%= form_tag bands_path, method: :get, class: 'form-inline' do %>
    <%= select_tag :tag, options_from_collection_for_select(@tags, 'id', 'genre', params[:tag]), class: 'form-control' %>
    <%= submit_tag "Buscar!", class: 'btn btn-primary search-btn-inline' %>
  <% end %>

  <br>

  <div class="row">
    <% @bands.each do |band| %>

      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="card">
          <% if band.photo.url %>
            <%= image_tag band.photo.url, class: 'card-img-top', size: '250x250' %>
          <% else %>
            <img src='https://images.unsplash.com/photo-1431069767777-c37892aa0a07?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=c3a556a7c67a4fe290e9336a9703ed61&auto=format&fit=crop&w=1353&q=80' class='card-img-top' style='height: 250px;' >
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= band.name %></h5>
            <p class="card-text">MÃ­nimo: R$<%= band.minimum_price %></p>
            <div class="text-right">
              <%= link_to 'Ver Perfil', band, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>





