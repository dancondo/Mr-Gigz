<div class="container">
  <div class="row">
    <div class="bands-show-image-border col-sm-12 col-md-7 classic-temp ">
      <% if @band.photo.url %>
      <%= image_tag @band.photo.url, class: 'image-band-show';%>
      <% end %>
      <div class="bands-show-text">
       <div class="row">
        <h2 style="padding-left: 15px;"><%= @band.name %></h2>
      </div>

    </div>
    <h4><i class="fas fa-dollar-sign mini-p"></i><%=@band.minimum_price %></h4>
    <div class="row band-show-description">
      <p><%= @band.description %></p>
    </div>
    <div class="row">

      <div class="col-sm-6 bands-show-action">

        <% if current_user.bar %>
          <% if current_user.bar.messages.find_by(band: @band) %>
            <%= link_to 'Mensagem', conversation_path(current_user.bar.messages.find_by(band: @band).conversation, element_id: @band), class: 'btn btn-primary' %>
          <% else %>
            <%= link_to 'Mensagem', conversations_path(element_id: @band), class: 'btn btn-primary', method: :post %>
          <% end %>
        <% end %>
        
        <button type="button" class="btn btn-warning">Ad Favoritos</button>
      </div>
      <div class="col-sm-6 bands-show-social-logo">
        <a href="#"><i class="fab fa-instagram fab-show "></i></a>
        <a href="#"><i class="fab fa-facebook fab-show "></i></a>
        <a href="#"><i class="fab fa-twitter fab-show "></i></a>
        <a href="#"><i class="fab fa-youtube fab-show "></i></a>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-4">
    <div class="bands-show-video row classic-temp ">
     <h3>Videos</h3>
     <iframe width="100%" height="250"src="https://www.youtube.com/embed/Z8uvPLsah0s" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
   </div>
   <div class="bands-show-repertories row classic-temp ">
    <div class="col-sm-12">
      <h3>Repertories</h3>
      <ul>
        <li><h5>Nome da musica 1</h5></li>

        <li><%= render 'shared/audioplayer'%></li>

        <li>tags tags tags</li>
      </ul>
    </div>
  </div>
</div>

</div>
<div class="row">
  <div class="bands-show-tags col-sm-12 col-md-11 classic-temp ">
    <h3 class="bands-show-tags-title">Tags</h3>
    <% @band.my_tags.each do |tag| %>
    <button type="button" class="btn btn-secondary"><%= tag.tag.genre %></button>
    <% end %>
  </div>
  <div class="bands-show-container-bottom">
  <div class="col-sm-12 col-md-12 bands-show-buttons-bottom">
    <button type="button" class="btn btn-info bttn-bands-show"><%= link_to 'Edit', edit_band_path(@band) %></button>
    <button type="button" class="btn btn-danger bttn-bands-show"><%= link_to 'Delete', @band,
    method: :delete,
    data: { confirm: "Are you sure?" } %></button>
    <%= link_to "minhas mensagens", messages_path, class: "btn btn-primary" %>
  </div>
</div>
</div>

</div>









