<div class="col-xs-12 col-md-5 offset-sm-2 col-no-padding">
  <div class="form-post plain padding-left-none">
    <%= simple_form_for(@message, remote: true) do |f| %>
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <div class="form-group">
          <%= f.input :content, label: "Nova Mensagem", input_html: { rows: 1 } %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= hidden_field_tag(:element_id, @element_id) %>
    </div>
    <div class="form-group caixa-bttn">
      <%= f.submit 'Enviar', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
