<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12">
			<div class="form-post">
				<h1>Criar um Gig !</h1>
				<%= simple_form_for [@bar, @gig] do |f| %>
				<div class="row">
					<div class="col-xs-12 col-sm-12">
						<div class="form-group">
							<%= f.input :title, label: "Titulo do Anuncio" %>
						</div>
					</div>
				</div>

        <div class="form-group">
          <%= f.association :tags, label: 'Estilo do Gig' ,label_method: :genre, value_method: :id, input_html: { class: 'form-control example' } %>
        </div>

				<div class="form-group">
					<%= f.input :description, label: "Descricao" %>
				</div>
				<div class="form-group">
					<%= f.input :cache %>
				</div>
				<div class="form-group">
					<%= f.input :start_date, as: :string,  label: "Data de Inicio", input_html: { class: "datepicker" } %>
				</div>
				<div class="form-group">
					<%= f.input :end_date, as: :string, label: "Finalizacao", input_html: { class: "datepicker" } %>
				</div>

				<div class="form-group caixa-bttn">
					<%= f.submit 'Criar Gig !', class: "btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
