<div class="gig_banner">
  <div class="gig-banner-content">
    <h1 style="padding: 32px; font-size: 64px;">ESCOLHE SEU GIG !</h1>
        <div class="row gig-search">
          <%= form_tag gigs_path, method: :get, class: 'form-inline ' do %>
          <%= select_tag :tag, options_from_collection_for_select(@tags, 'id', 'genre', params[:tag]), class: 'form-control gig-search-path genre-selector' %>
          <%= submit_tag "Buscar", class: 'btn btn-primary search-btn-inline' %>
          <% end %>
        </div>
      </div>
    </div>

<div class="container">
  <div class="gigs-container">
<!--    <div class="gig-image-crochet"> <%#= image_tag 'title-gigz-mauve.png', size: "125x125" %> </div> -->
    <div class="gigs-box">

      <ul class="list-inline">
        <div class="row">
          <% @gigs.each do |gig| %>

          <div class="col-xs-12 col-sm-6 col-lg-4">
            <li class="list-inline-item catalog">
              <div class="top">
                <div class="gig-card-top">
                  <p class="gig-card-titulo"><%= gig.title %></p>
                </div>
              </div>
              <div class="gig-card-body">
                <p class="gig-card-genero">
                  <% gig.gig_tags.each do |tag| %>
                  <spam><button type="button" class="btn btn-secondary"><%= tag.tag.genre %></button></spam>
                  <% end %>
                </p>
                <p class="gig-card-localizacao">
                  <i class="fa fa-map-marker-alt"></i>
                  SÃ£o Paulo
                </p>
                <p class="gig-card-data">
                  <%= gig.start_date %>
                </p>
                <p class="gig-card-price">
                  R$<%= gig.cache %>,00 por 1 hora
                </p>
                <button type="button" class="btn btn-primary btn-primary-card" data-toggle="modal" data-target="#modal<%= gig.id %>">
                  Ver Gig
                </button>
                <%= render partial: 'modal', locals: {gig: gig} %>
              </div>
            </li>
          </div>
          <% end %>
        </div>
      </ul>
<!--       <div class="gig-image-crochet-2"> <%#= image_tag 'title-gigz-mauve-2.png', size: "125x125" %> </div> -->
    </div>
  </div>
</div>



