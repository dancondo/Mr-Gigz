<div class = "container">
  <h1>Nome do bar</h1>

  <div class="row">
    <div class="gig-box gig-image-box col-sm-12 col-md-7">
      <%= image_tag @bar.photo.url, style: 'width: 100%; height: 442px;' %>
    </div>
    <div class="gig-box gig-infos-box col-sm-12 col-md-5">
      <div class="gig-map">
        <div id="map"
          style="width: 100%;
          height: 300px;"
          data-markers="<%= @markers.to_json %>"
        ></div>
      </div>
      <div class="gig-infos">
        <i class="fas fa-map-marker-alt"></i>
        <p><%= @bar.address %></p>
        <i class="far fa-calendar-alt"></i>
        <p><%= @gig.start_date %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="gig-box gig-description col-sm-12 col-md-7">
      <h3>Descrição:</h3>
      <p><%= @gig.description %></p>
    </div>
    <div class="gig-box gig-apply col-sm-12 col-md-5">
      <h4>Ficou interessado? Não perca tempo!</h4>
      <button type="button" class="btn btn-primary">Candidatar-se</button>
    </div>
  </div>
</div>
