<h1>Gigs#show</h1>

<div class = "container" >

  <div class="row">
    <% @bands.each do |band| %>

      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="card">
          <% if band.photo.url %>
            <%= image_tag band.photo.url, class: 'card-img-top', size: '250x250' %>
          <% else %>
            <img src='https://images.unsplash.com/photo-1431069767777-c37892aa0a07?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=c3a556a7c67a4fe290e9336a9703ed61&auto=format&fit=crop&w=1353&q=80' class='card-img-top' style='height: 250px;' >
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= band.name %></h5>
            <p class="card-text">Mínimo: R$<%= band.minimum_price %></p>
            <div class="text-right">
              <%= link_to 'Ver Perfil', band, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>













<%= @gig.start_date %>
<%= @gig.end_date %>
<%= @gig.description %>
<% if current_user.bar %>
  <%= link_to "Editar", edit_bar_gig_url(current_user.bar, @gig)%>
<% end %>
<%= link_to "Deletar", @gig,
                       method: :delete,
                       data: { confirm: "Você tem certeza?" } %>
<% if current_user.band %>
  <% if current_user.band.gigs.include?(@gig) %>
    <%= link_to "Cancelar Inscricao!", gig_apply_url(@gig),
                              method: :delete,
                              data: { confirm: "Cancelar inscricao?"} %>

  <% else %>

    <%= link_to "Inscrever!", gig_applies_url(@gig),
                              method: :post,
                              data: { confirm: "Aplicar para esse Gig?"} %>
  <% end %>
<% end %>
