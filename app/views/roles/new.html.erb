<h1>Roles#new</h1>
<p>Find me in app/views/roles/new.html.erb</p>
<%= simple_form_for current_user, url: roles_path, method: :post do |f| %>
  <div class="form-inputs">
    <%= f.input :role, collection: {'Banda' => :band, 'Bar' => :bar} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Proximo" %>
  </div>

<% end %>
