<div class = "container container-margin-separator">

  <div class="row">
    <div class="col-sm-12 col-md-12">

      <h1 class="bar-name"><%= @bar.name %></h1>

      <div class="row">

        <div class="col-sm-12 col-md-8">
          <div class= "gig-box gig-image-box">
            <% if @bar.photo.url %>
              <%= image_tag @bar.photo.url, style: 'width: 100%; height: 100%;' %>
            <% end %>
          </div>
        </div>

        <div class="col-sm-12 col-md-4 ">
          <div class="gig-box gig-infos-box ">
            <div id="map" class="map-gig-show"
              style="width: 100%;
              height: 300px;"
              data-markers="<%= @markers.to_json %>">
            </div>

            <div class="gig-infos">
              <p class="no-margin-btt">
                <i class="fas fa-map-marker-alt"></i>
                <%= @bar.address %>
              </p>
              <% if @bar.user == current_user.bar %>
                <button type="button" class="btn btn-edit"><%= link_to 'Edit', edit_bar_path(@bar) %></button>
                <button type="button" class="btn btn-action"><%= link_to "Deletar", @bar,
                        method: :delete,
                        data: { confirm: "VocÃª tem certeza?" } %></button>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="col-sm-12 col-md-12">
      <div class="gig-box gig-description gig-dashboard-table-container">

        <h3>Proximos Gigs no <%= @bar.name %></h3>
        <%= render 'bars/bar_gigs' %>

      </div>
    </div>

  </div>
</div>

