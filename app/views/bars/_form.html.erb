<%= simple_form_for @bar do |f| %>
  <%= f.input :name, label: @bar.name ? "Atualize o nome do bar" : "Nome do seu bar" %>
  <%= f.input :address, label: @bar.address ? 'Atualize o endereço' : 'Endereço do bar' %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit 'Validar', class: "btn btn-primary" %>
<% end %>
