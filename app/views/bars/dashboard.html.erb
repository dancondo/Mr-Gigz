<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <h1 class="dashboard-main-title">Bem Vindo! <%= @bar.name %></h1>

      <div class='col-sm-12 col-md-4 dashboard-col'>
        <div class="contact-dashboard dashboard-box">
          <h3>Contatos</h3>

          <% @bands.each do |band| %>

            <%= link_to conversation_url(element_id: band.id), class: 'contact-coversation-link' do %>
              <div class="contact-section-part contact-message">
                <%= image_tag band.photo.url, class: 'contact-photo' %>
                <div class="contact-section-part preview-message-content">
                  <h4><%= band.name %></h4>
                  <p><%= Message.where(band: band, bar: @bar).last.content %></p>
                  <p><%= Message.where(band: band, bar: @bar).last.created_at %></p>
                </div>
              </div>
            <% end %>

          <% end %>

          </div>
        </div>

      <div class="col-md-8 dashboard-col">

      </div>

    </div>
  </div>
</div>
